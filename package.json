{
  "name": "facturation-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "install:all": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "db:migrate": "npm --prefix apps/backend run db:migrate",
    "db:seed": "npm --prefix apps/backend run db:seed",
    "start:backend": "npm --prefix apps/backend run start:prod",
    "start:frontend": "npm --prefix apps/frontend run build && npm --prefix apps/frontend run preview",
    "dev": "concurrently \"npm --prefix apps/backend run start:dev\" \"npm --prefix apps/frontend run dev\""
  },
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "devDependencies": {
    "concurrently": "8.2.2"
  },
  "dependencies": {
    "@nestjs/mapped-types": "^2.1.0"
  }
}
